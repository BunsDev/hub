{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "context": [
        "src/context"
      ],
      "components": [
        "src/components"
      ],
      "components/*": [
        "src/components/*"
      ],
      "hooks": [
        "src/hooks"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "services/*": [
        "src/services/*"
      ],
    }
  },
  "include": [
    ".eslintrc.js",
    "env-config.js",
    "next.config.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
